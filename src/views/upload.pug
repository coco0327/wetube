extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title", type="text", placeholder="Video Title", required, maxlength="80")
        input(name="description", type="text", placeholder="Description", required, minlength="20")
        input(name="hashtags", type="text", placeholder="Hashtags, Seperated by comma ,", required)
        input(value="Save", type="submit")